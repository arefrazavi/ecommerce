{% extends 'base.html.twig' %}

{% block title %} Home {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <h3>Hello {{ app.user.firstName }}! </h3>
            <div> <a href="{{ path('logout') }}"> Logout </a> </div>
    {% else %}
            <h2>Welcome to My simple E-commerce application!</h2>
            <div> <a style="color: limegreen; font-weight: bold" href="{{ path('register') }}"> Register </a> or <a href="{{ path('login') }}"> Login </a> </div>
    {% endif %}
</div>
{% endblock %}
