{% extends 'base.html.twig' %}

{% block title %} Register {% endblock %}

{% block body %}
    <div class="row">
        <div class="col-6 offset-3">
            <h2> Registration </h2>

            {{ form_start(form) }}
                {{ form_row(form.username) }}
                <div class="alert-warning"> {{ form_errors(form.username) }} </div>

                {{ form_row(form.firstName) }}
                <div class="alert-warning"> {{ form_errors(form.firstName) }} </div>

                {{ form_row(form.lastName) }}
                <div class="alert-warning"> {{ form_errors(form.lastName) }} </div>

                {{ form_row(form.email) }}
                <div class="alert-warning"> {{ form_errors(form.email) }} </div>

                {{ form_row(form.plainPassword.first) }}
                <div class="alert-warning"> {{ form_errors(form.plainPassword.first) }} </div>

                {{ form_row(form.plainPassword.second) }}
                <div class="alert-warning"> {{ form_errors(form.plainPassword.second) }} </div>

                <button type="submit">Register!</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}