{% extends 'base.html.twig' %}

{% block title %} Register {% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-6 offset-md-3 col-md-8 offset-md-2 col-sm-12">
            <h2> Registration </h2>
            {{ form_start(form) }}
            <div class="form-group row">
                {{ form_label(form.username, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                    <div class="alert-warning">
                        {{ form_errors(form.username) }}
                    </div>
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.firstName, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                    <div class="alert-warning">
                        {{ form_errors(form.firstName) }}
                    </div>
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.lastName, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                    <div class="alert-warning">
                        {{ form_errors(form.lastName) }}
                    </div>
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.email, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    <div class="alert-warning">
                        {{ form_errors(form.email) }}
                    </div>
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                    <div class="alert-warning">
                        {{ form_errors(form.plainPassword.first) }}
                    </div>
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                    <div class="alert-warning">
                        {{ form_errors(form.plainPassword.second) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_widget(form.register, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}